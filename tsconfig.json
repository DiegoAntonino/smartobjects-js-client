{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": false,
        "outDir": "dist",
        "lib": [
            "es6"
        ]
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
